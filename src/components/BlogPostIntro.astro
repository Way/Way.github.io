---
interface Props {
  content: string;
}

const { content } = Astro.props;
---

<div class="chat-intro">
  {content}
</div>

<style>
  .chat-intro {
    background-color: #f0f0f5;
    border-radius: 10px;
    padding: 1em;
    font-size: 16px;
    margin: 1.5rem;
  }
  @media (max-width: 720px) {
    .chat-intro {
      margin: 0;
      margin-bottom: 1.5rem;
    }
  }
</style>
