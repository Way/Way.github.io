---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import BlogPostIntro from '../components/BlogPostIntro.astro';
import HeroVisual from '../components/HeroVisual.astro';
import '../styles/global.css'; // Keep global styles

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, prompt, visualTheme } = Astro.props;
---

<html lang="de">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.hero-container {
				position: relative;
				width: 100%;
				overflow: hidden;
				margin-bottom: 1.5rem;
			}
			.title-overlay {
				position: absolute;
				bottom: 5%;
				left: 50%;
				transform: translate(-50%, 0);
				text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.8);
				text-align: center;
				width: 90%;
				z-index: 1;
			}
			.title-overlay h1 {
				margin: 0;
				color: white;
				font-size: 3em;
				line-height: 1.1;
			}
			.date-container {
				text-align: center;
				margin-bottom: 1rem;
			}
			.date {
				color: rgb(var(--gray));
				margin: 0;
			}
			.last-updated-on {
				font-style: italic;
				color: rgb(var(--gray-light));
			}

			@media (max-width: 720px) {
				.title-overlay h1 {
					font-size: 2em;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-container">
					<HeroVisual
						title={title}
						pubDate={pubDate}
						visualTheme={visualTheme}
						variant="detail"
					/>
					<div class="title-overlay">
						<h1>{title}</h1>
					</div>
				</div>
				{prompt && <BlogPostIntro content={prompt} />}
				<div class="date-container">
					<div class="date">
						<FormattedDate date={pubDate} />
					</div>
					{
						updatedDate && (
							<div class="last-updated-on">
								Last updated on <FormattedDate date={updatedDate} />
							</div>
						)
					}
				</div>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
